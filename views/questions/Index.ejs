<style>
	html {
    position: relative;
    min-height: 100%;
}

body {
    margin: 0 0 100px;
	background-color:orange;
    /* bottom = footer height */
    
}
footer{
	bottom:0;
	position: absolute;
	width: 100%;
	
}
	.coll{
		padding:25px;
		margin:25px;
		
	}
	
	.card{
		padding:25px;
		margin:auto
	}
	
	.card .fav{
		float:right;
	}
	
	
</style>
<nav>
    <div class="nav-wrapper">
      <a href="#" class="brand-logo">Logo</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="question/new">Ask a question</a></li>
        <li><a href="/">Dashboard</a></li>
        <li><a href="">Blank</a></li>
      </ul>
    </div>
  </nav>



<ul class="coll">
<% questions.forEach(function(question){ %>
    <li class="collection-item avatar">      
		<div class="card">
			<p><%= question.date %></p><br><h3><b> <%= question.content %></b></h3><span class="fav"><i class="material-icons">favorite</i><%= question.likes %></span>
		</div>
			<form action="/question/like/<%= question.id %>" method="POST">
	<br>			
    <button class="btn-floating btn-large waves-effect waves-light red" style="float:right"><i class="material-icons">favorite</i></button>
</form>
		<h4 style="color:white">Answers</h4>
		<ul class="coll" >
			
			<% question.answers.forEach(function(answer){ %>
			<li class="collection-item avatar">
				<div class="card teal white-text">
				<span><%= answer.answerDate %></span><br>
				<h3><%= answer.answerBody %></h3><br>
					</div>
			</li>
				
<% }); %>
		</ul>
	
	</li>
	<h3>Answer now</h3>
			
				<form action="/question/answer/<%= question.id %>" method="POST">
    <input type="text" name="answerBody" placeholder="">
    <button class="waves-effect waves-light btn">Submit<i class="material-icons right">send</i></button>
</form>
			
				<p>Please <a href="/auth/google">Login</a> to leave a comment</p>
			

    <% }); %>
</ul>

